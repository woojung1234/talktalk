# TalkTalk 환경변수 설정
# 이 파일을 .env로 복사해서 사용하세요

# 기상청 Open API 서비스키
# https://data.go.kr 에서 "기상청_단기예보 조회서비스" 신청 후 발급받으세요
WEATHER_API_KEY=your_weather_api_key_here

# 개발 환경 설정
NODE_ENV=development

# API 베이스 URL (필요시 변경)
API_BASE_URL=http://apis.data.go.kr/1360000/VilageFcstInfoService_2.0

# 디버그 모드 (true/false)
DEBUG_MODE=true

# 기본 도시 설정
DEFAULT_CITY=서울

# Mock 데이터 사용 여부 (API 키가 없을 때 자동으로 true가 됩니다)
USE_MOCK_DATA=false